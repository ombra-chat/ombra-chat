    <children>
        <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="10.0">
            <children>
                <Label text="Default selected folder" />
                <ComboBox fx:id="chatFolderComboBox" />
                <Button fx:id="saveBtn" text="Save" onAction="#saveSettings" />                       
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox> 
    </children>
</AnchorPane>

