<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.zonia3000.ombrachat.controllers.ChatSettingsDialogController">
    <children>
        <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="10.0">
            <children>
                <CheckBox fx:id="enableGPGCheckBox" text="Enable GPG" />
                <ComboBox fx:id="keysComboBox" />
                <Button mnemonicParsing="false" fx:id="saveBtn" text="Save" onAction="#handleSaveButtonClick" />
                
                <Button mnemonicParsing="false" styleClass="pt" fx:id="secretChatBtn" text="Start new secret chat" onAction="#createNewSecretChat" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" bottom="10.0" />
            </padding>
        </VBox> 
    </children>
</AnchorPane>
